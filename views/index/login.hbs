<div class="d-flex m-auto">

    <div class="card m-auto p-3 rounded shadow">
        <div class="card-body d-flex flex-column">
            {{#if error}}
            <div class="alert alert-danger" role="alert">
                {{error.message}}
            </div>
            {{/if}}
            <h1 class="text-center pb-3">Login</h1>

            <form class="d-flex flex-column" action="/login" method="post">

                <div class="form-group">
                    <input class="form-control" type="text" name="input" placeholder="email / nickname">
                    <small id="inputHelp" class="form-text text-muted">You can login with either nickname or
                        email</small>
                </div>

                <div class="form-group">
                    <input class="form-control" type="password" name="password" id="password" placeholder="password">
                    <small id="passHelp" class="form-text text-muted">Enter your password</small>
                </div>

                <button class="btn btn-primary" type="submit">Login</button>
            </form>
        </div>
    </div>

</div>