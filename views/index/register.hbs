<div class="d-flex m-auto">
    <div class="card m-auto p-3 rounded shadow">
        <div class="card-body d-flex flex-column">
            <h1 class="text-center pb-3">Register</h1>

            <form action="/register" method="post">

                <div class="form-group">
                    <input class="form-control" type="text" name="name" placeholder="Name">
                    <small id="nameHelp" class="form-text text-muted">Your name can only contain characters and
                        spaces</small>
                </div>

                <div class="form-group">
                    <input class="form-control" type="text" name="nickname" placeholder="nickname">
                    <small id="nicknameHelp" class="form-text text-muted">Nickname has to unique</small>
                </div>

                <div class="form-group">
                    <input class="form-control" type="email" name="email" placeholder="email">
                    <small id="nicknameHelp" class="form-text text-muted">Enter your email</small>
                </div>

                <div class="form-group">
                    <input class="form-control" type="password" name="password" placeholder="password">
                    <small class="form-text text-muted">Your password</small>
                </div>

                <button class="btn btn-primary" type="submit">Submit</button>
            </form>
        </div>
    </div>
</div>