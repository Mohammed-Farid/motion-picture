<div class="container d-flex m-auto flex-column justify-content-center">

    <form action="/users/{{searchedUser.nickname}}/lists/edit/{{list.id}}" method="post">
        <div class="card border rounded">
            <div class="card-header bg-primary text-white">
                Edit list
            </div>
            <div class="card-body">
                <div class="form-group">
                    <label for="listname">List name</label>
                    <input type="text" class="form-control" id="listname" name="name" value="{{list.name}}">
                </div>

                <div class="form-group">
                    <label for="listdescription">List description</label>
                    <textarea class="form-control" name="description" id="listdescription" cols="30"
                        rows="10">{{list.description}}</textarea>
                </div>

                <div class="custom-control custom-switch">
                    <input type="checkbox" name="publicIndicator" class="custom-control-input" id="checkbox"
                        name="public" {{#if list.public}} checked {{/if}}>
                    <label class="custom-control-label" for="checkbox">Public
                        list</label>
                </div>

                <button class="btn btn-success mt-3" type="submit">Edit list</button>
            </div>
        </div>

    </form>

</div>